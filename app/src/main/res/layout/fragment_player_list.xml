<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/rcvPlayerList"
            android:name="fragment.PlayerListFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".fragment.PlayerListFragment"
        tools:listitem="@layout/fragment_player_view" />
    </ScrollView>

    <TextView
        style="@style/TextViewStyle.Big.Bold"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tvNoPlayers"
        android:text="@string/noPlayersFound"
        android:visibility="gone"/>

    <Button
        style="@style/ButtonStyle"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnCancel"
        android:text="@string/cancel"/>
</LinearLayout>