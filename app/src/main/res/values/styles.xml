<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="ButtonStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">16dp</item>
		<item name="android:background">@drawable/button_rounded_rectangle</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="ButtonStyle.Small">
		<item name="android:layout_width">25dp</item>
		<item name="android:layout_height">25dp</item>
		<item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/button_rounded_rectangle_small</item>
	</style>

	<style name="ButtonStyle.Medium">
		<item name="android:layout_width">50dp</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:layout_marginStart">25dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/button_rounded_rectangle_medium</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
	</style>

	<style name="ButtonStyle.Submit">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">0dp</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:textColor">@android:color/holo_red_dark</item>
		<item name="android:radius">0dp</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="ButtonStyle.Round">
		<item name="android:padding">0dp</item>
		<item name="android:layout_margin">@dimen/button_margin_round</item>
		<item name="android:layout_width">@dimen/round_button_size</item>
		<item name="android:layout_height">@dimen/round_button_size</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:background">@drawable/button_round_normal_selector</item>
	</style>

	<style name="ButtonStyle.Round.Wicket">
		<item name="android:background">@drawable/button_round_wicket_selector</item>
	</style>

	<style name="ButtonStyle.Round.Boundary">
		<item name="android:background">@drawable/button_round_boundary_selector</item>
	</style>

	<style name="ButtonStyle.Round.Extras">
		<item name="android:background">@drawable/button_round_extra_selector</item>
	</style>

	<style name="TextViewStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">4dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/colorPrimaryDark</item>
	</style>

    <style name="TextViewStyle.MorePadding">
        <item name="android:padding">12dp</item>
    </style>

    <style name="TextViewStyle.LeftRightPadding">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

	<style name="TextViewStyle.List">
		<item name="android:padding">10dp</item>
	</style>

	<style name="TextViewStyle.List.Bold">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TextViewStyle.Bold">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TextViewStyle.Bold.Medium">
		<item name="android:textSize">14sp</item>
	</style>

    <style name="TextViewStyle.Bold.Medium.MorePadding">
        <item name="android:padding">12dp</item>
    </style>

	<style name="TextViewStyle.Big">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="TextViewStyle.Big.Bold">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="EditTextStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">8dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/colorPrimaryDark</item>
	</style>

	<style name="TextViewStyle.TableRow">
		<item name="android:padding">4dp</item>
	</style>

	<style name="TextViewStyle.TableRow.Header">
		<item name="android:textSize">12sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TextViewStyle.TableRow.Data">
		<item name="android:layout_width">30dp</item>
		<item name="android:gravity">right</item>
	</style>

	<style name="TextViewStyle.TableRow.Data.Header">
		<item name="android:textSize">12sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">right</item>
	</style>

	<style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="RadioButtonStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">12sp</item>
		<item name="android:padding">10dp</item>
	</style>

	<style name="LineSeparator">
		<item name="android:layout_height">1dip</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">@color/lineSeparator</item>
	</style>

	<style name="LineSeparator.Dark">
		<item name="android:background">@color/teal_A100</item>
	</style>

    <style name="LineSeparator.Dark.SmallMargin">
        <item name="android:background">@color/teal_A100</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="LineSeparator.Dark.Margin">
        <item name="android:background">@color/teal_A100</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="oversLeft">Overs Left</style>
</resources>